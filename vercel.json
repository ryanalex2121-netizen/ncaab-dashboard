{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    {
      "src": "api/get-games.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["package.json", "package-lock.json"] }
    },
    {
      "src": "api/update-games.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["package.json", "package-lock.json"] }
    }
  ],
  "crons": [
    {
      "path": "/api/update-games",
      "schedule": "0 */4 * * *"
    }
  ]
}

